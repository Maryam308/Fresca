<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= recipe.title %> - Fresca</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/showRecipe.css" />
    <script src="scripts/script.js"></script>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <section class="hero">
      <div class="container">
        <div class="recipe-hero-content">
          <h1><%= recipe.title %></h1>

          <!-- Show Edit/Delete buttons if user owns recipe or is admin -->
          <% if (currentUser && (currentUser._id.toString() ===
          recipe.authorId._id.toString() || currentUser.isAdmin)) { %>
          <div class="recipe-actions">
            <a href="/recipes/<%= recipe._id %>/edit" class="btn btn-edit"
              >Edit</a
            >
            <form
              action="/recipes/<%= recipe._id %>?_method=DELETE"
              method="POST"
              class="delete-form"
              onsubmit="return confirm('Are you sure you want to delete this recipe?')"
            >
              <button type="submit" class="btn btn-delete">Delete</button>
            </form>
          </div>
          <% } %>
        </div>
      </div>
    </section>

    <!-- Recipe Info Bar -->
    <section class="recipe-info-bar">
      <div class="container">
        <div class="recipe-info-content">
          <div class="info-item">
            <div class="info-label">Cuisine</div>
            <div class="info-value">
              <%= recipe.cuisineId ? recipe.cuisineId.cuisineName :
              'Uncategorized' %>
            </div>
          </div>
          <div class="info-item">
            <div class="info-label">Prep Time</div>
            <div class="info-value"><%= recipe.prepTime %> min</div>
          </div>
          <div class="info-item">
            <div class="info-label">Cook Time</div>
            <div class="info-value"><%= recipe.cookTime %> min</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Recipe Content -->
    <section class="recipe-main">
      <div class="container">
        <div class="recipe-content">
          <!-- Left Column: Image and Author -->
          <div class="recipe-image-container">
            <img
              src="<%= recipe.recipeImage || '/images/default-recipe.jpg' %>"
              alt="<%= recipe.title %>"
              class="recipe-main-image"
            />

            <div class="recipe-author-card">
              <div class="author-title">Recipe Added By</div>
              <div class="author-name">
                <%= recipe.authorId ? recipe.authorId.username : 'Unknown' %>
              </div>
              <div class="author-date">
                On <%= recipe.createdAt ? recipe.createdAt.toDateString() :
                'Unknown Date' %>
              </div>
            </div>
          </div>

          <!-- Right Column: Ingredients -->
          <div class="ingredients-section">
            <h2 class="section-title">Ingredients</h2>
            <ul class="ingredients-list">
              <% if (recipe.ingredients && recipe.ingredients.length > 0) { %>
              <% recipe.ingredients.forEach(ingredient => { %>
              <li><%= ingredient %></li>
              <% }) %> <% } else { %>
              <li>No ingredients listed</li>
              <% } %>
            </ul>
          </div>

          <!-- Full Width: Instructions -->
          <div class="instructions-section">
            <h2 class="instructions-title">
              Cooking <span class="highlight">Instructions</span>
            </h2>
            <ol class="instructions-list">
              <% if (recipe.steps && recipe.steps.length > 0) { %> <%
              recipe.steps.forEach(step => { %>
              <li><%= step %></li>
              <% }) %> <% } else { %>
              <li>No cooking instructions provided</li>
              <% } %>
            </ol>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
      <div class="container">
        <p>&copy; All rights reserved Fresca 2025</p>
      </div>
    </footer>

    <!-- Back to Top Button -->
    <a href="#top" class="back-to-top">â†‘</a>
  </body>
</html>
