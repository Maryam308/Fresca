<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign In - Fresca</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/authentication.css" />
    <script defer src="/scripts/auth.js"></script>
  </head>
  <body>
    <!-- Sign In Form -->
    <section class="auth-section">
      <!-- Hero Left -->
      <div class="auth-hero">
        <div class="container">
          <div class="hero-content">
            <h1>Welcome Back!</h1>
            <p>Sign in to your account to continue cooking</p>
          </div>
        </div>
      </div>

      <!-- Form Right -->
      <div class="auth-container">
        <% if (error) { %>
        <div class="error-message"><%= error %></div>
        <% } %>

        <form
          action="/auth/sign-in"
          method="POST"
          class="auth-form"
          id="signinForm"
          novalidate
        >
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" required />
            <div class="field-error" id="usernameError">
              Username is required
            </div>
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required />
            <div class="field-error" id="passwordError">
              Password is required
            </div>
          </div>

          <button type="submit" class="auth-btn">Sign In</button>
        </form>

        <div class="auth-footer">
          <p>Don't have an account? <a href="/auth/sign-up">Sign up here</a></p>
        </div>
      </div>
    </section>
  </body>
</html>
